<h3>トップページ</h3>
<h3><%= link_to '新規投稿', new_record_path%></h3>
<% @records.each do |record|%>
        <%= record.weight%>
        <% record.images.each do |image| %>
      <%= image_tag image, class:'images' %>
    <% end %>
  
  <%= link_to '編集', edit_record_path(record.id)%>
